<h2 style="color:crimson;">Listado Productos</h2>

<% if(allProducts.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Nombre</th> <th>Apellido</th> <th>Edad</th> </tr>
            <% for (const producto of allProducts) {%>
            <tr>
                <td><%= producto.titulo %></td>
                <td><%= producto.precio %></td>
                <td><%= producto.imagen %></td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-danger">no se encontraron datos</h1>
<% } %>