<form action="/" method="POST">
    <!-- Campo nombre del producto -->
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input id="nombre" class="form-control" type="text" name="titulo" required>
    </div>

    <!-- Campo precio del producto -->
    <div class="form-group">
        <label for="precio">Precio</label>
        <input id="precio" class="form-control" type="number" step="0.01" name="precio" required>
    </div>

    <!-- Campo url de la foto del producto -->
    <div class="form-group">
        <label for="foto">Foto URL</label>
        <input id="foto" class="form-control" type="url" name="imagen">
    </div>

    <!-- Botón de envío -->
    <button class="btn btn-success mt-3">Enviar</button>
</form>